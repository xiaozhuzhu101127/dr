<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        layout="@layout/common_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/h_margin_small"
                android:paddingRight="@dimen/h_margin_small" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43.81dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/common_while_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系号码"
                        android:textColor="#484848"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/recommend_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:hint="请填写联系号码"
                        android:inputType="phone"
                        android:textColor="#484848"
                        android:textSize="22sp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/recommend_from_contact_btn"
                    android:layout_width="99.68dp"
                    android:layout_height="28.57dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ctxlcx"
                    android:scaleType="center" />

                <EditText
                    android:id="@+id/recommend_content"
                    android:layout_width="match_parent"
                    android:layout_height="111.1dp"
                    android:layout_marginTop="10.1dp"
                    android:background="@drawable/common_while_bg"
                    android:ems="10"
                    android:gravity="left|top"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:text="@string/recommend_sms_content"
                    android:textColorLink="@android:color/black" >
                </EditText>

                <Button
                    android:id="@+id/recommend_send"
                    style="@style/hugeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/h_margin_tiny"
                    android:layout_marginRight="@dimen/h_margin_tiny"
                    android:layout_marginTop="20dp"
                    android:text="发送 " />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/h_margin_tiny"
                    android:layout_marginRight="@dimen/h_margin_tiny"
                    android:text="温馨提示：朋友安装后 ，记得提醒他送你一个五星全评价，有助您开展业务 "
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>

   

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         
            android:src="@drawable/zongpingtu" 
             android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>