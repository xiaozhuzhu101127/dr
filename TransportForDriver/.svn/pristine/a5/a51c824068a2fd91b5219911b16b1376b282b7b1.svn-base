<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_gray">
    <include
        layout="@layout/common_title_goods"/>
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp">
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="共有"
		    android:textSize="17sp"
		    android:textColor="#666666"
		    android:id="@+id/goods_hh_count_view_1"
		    android:visibility="gone"/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="17sp"
		    android:textColor="#DB3C0B"
		    android:id="@+id/goods_hh_count"/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="条符合条件货源信息"
		    android:textSize="17sp"
		    android:textColor="#666666"
		    android:id="@+id/goods_hh_count_view_2"
		    android:visibility="gone"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#2D71C4"/>
    <com.topjet.crediblenumber.widget.RefreshableView  
        android:id="@+id/refreshable_view"  
        android:layout_width="match_parent"  
        android:layout_height="0dp" 
        android:layout_weight="1">  
	    <ListView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:id="@+id/goods_listView"
	        android:fadingEdge="none"
	        android:divider="#CCCCCC"
	        android:dividerHeight="0.5dp"/>
    </com.topjet.crediblenumber.widget.RefreshableView>
    <include
        layout="@layout/common_footer_goods"/>
</LinearLayout>
