<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.topjet.crediblenumber"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        layout="@layout/common_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/h_margin_big"
            android:paddingRight="@dimen/h_margin_big"
            android:paddingTop="15dp" >
            
            <RelativeLayout
                android:id="@+id/rl_local_phone_book"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/category_item_height"
                android:layout_marginBottom="@dimen/category_item_margin"
                android:background="@drawable/common_while_bg"
                android:onClick="onClick"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >


                <TextView
                    android:id="@+id/main_item_local_phone_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="当地电话本"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/category_item_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_category_localWeather"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/category_item_height"
                android:layout_marginBottom="@dimen/category_item_margin"
                android:background="@drawable/common_while_bg"
                android:onClick="onClick"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >


                <TextView
                    android:id="@+id/widget_category_item_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="本地天气"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/category_item_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_category_idcard"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/category_item_height"
                android:layout_marginBottom="@dimen/category_item_margin"
                android:background="@drawable/common_while_bg"
                android:onClick="onClick"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <TextView
                    android:id="@+id/widget_category_item_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="身份证核查"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/category_item_arrow" />
            </RelativeLayout>

           
            
             <RelativeLayout
                android:id="@+id/rl_category_violate"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/category_item_height"
                android:layout_marginBottom="@dimen/category_item_margin"
                android:background="@drawable/common_while_bg"
                android:onClick="onClick"
              >
                
               <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jian"
                          android:paddingLeft="0dp"
                          android:layout_marginLeft="0dp"
                          android:paddingTop="0dp"
                          android:layout_marginTop="0dp"
              
                />

                <TextView
                    android:id="@+id/widget_category_item_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="违章查询"
                    android:textColor="#595959"
                    android:textSize="18sp"
                       android:paddingLeft="20dp"
                android:paddingRight="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/category_item_arrow" 
                       android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
            </RelativeLayout>
            
             
             
             <RelativeLayout
                android:id="@+id/item_contact_filter"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/category_item_height"
                android:layout_marginBottom="@dimen/category_item_margin"
                android:background="@drawable/common_while_bg"
                android:onClick="onClick"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <TextView
              
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="通讯录筛查"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/category_item_arrow" />
            </RelativeLayout>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>