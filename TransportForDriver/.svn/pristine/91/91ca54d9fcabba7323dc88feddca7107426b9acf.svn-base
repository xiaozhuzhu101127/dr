<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/color_while"
    android:descendantFocusability="blocksDescendants">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:src="@drawable/qu"
        android:id="@+id/qu"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/qu"
        android:layout_marginLeft="3dp"
        android:orientation="vertical"
        android:id="@+id/goods_my_layout">
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        	<TextView
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="浙江杭州"
        		android:textSize="22sp"
        		android:textColor="#DB3C0B"
        		android:id="@+id/goods_my_target"/>
        	<TextView
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="3dp"
        		android:text="20吨"
        		android:textSize="17sp"
        		android:textColor="#666666"
        		android:id="@+id/goods_my_heary"/>
        	<TextView
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="3dp"
        		android:text="泡货"
        		android:textSize="17sp"
        		android:textColor="#666666"
        		android:id="@+id/goods_my_goodsType"/>
    	</LinearLayout>
    	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        	<TextView
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="报价:4800元"
        		android:textSize="17sp"
        		android:textColor="#666666"
        		android:id="@+id/goods_my_price"/>
        	<TextView
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="3dp"
        		android:text="第2名-28分36秒"
        		style="@style/goods_8"
        		android:id="@+id/goods_my_bjinfo"/>
    	</LinearLayout>
    </LinearLayout>
	<ImageButton
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:background="@drawable/tiao"
	    android:visibility="visible"
	    android:id="@+id/goods_my_tiao"
	    android:onClick="click"/>
	<ImageButton
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:background="@drawable/btn8"
	    android:visibility="gone"
	    android:id="@+id/goods_my_notiao"/>
</RelativeLayout>
