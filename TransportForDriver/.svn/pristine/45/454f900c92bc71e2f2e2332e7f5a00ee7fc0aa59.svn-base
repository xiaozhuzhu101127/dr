<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/color_while">
    
	<LinearLayout
	    android:layout_width="match_parent"
	   	android:layout_height="wrap_content"
	   	android:orientation="horizontal"
	   	android:background="@drawable/serbtnbg"
	   	android:gravity="center"
	   	android:paddingLeft="@dimen/h_margin_big"
	   	android:paddingRight="@dimen/h_margin_big"
	   	android:paddingTop="5dp"
	   	android:paddingBottom="5dp">
	   	<Button
	   	    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:layout_weight="1"
	   		android:background="@drawable/tjbg"
	   		android:text="返回"
	   		android:textSize="17sp"
	   		android:id="@+id/search_back_unavailable"
	   		android:onClick="onClick"/>
	   	<Button
	   	    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:layout_weight="1"
	   		android:background="@null"
	   		android:text="交易时间已过"
	   		android:textSize="22sp"
	   		android:textColor="@color/color_while"/>
	   	<LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:gravity="center"
	    	android:background="@drawable/tjbg"
	    	android:layout_weight="1">
	    	<ImageView
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_marginRight="5dp"
	    		android:src="@drawable/xing"/>
	    	<Button
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="杭州"
	    		android:background="@null"
	    		android:textSize="17sp"
	    		android:id="@+id/search_recommend_unavailable"/>
	   	</LinearLayout>
	</LinearLayout>
	    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/tskf2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="抢好货每天交易时间为"
        style="@style/goods_3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5:00-9:00"
        style="@style/goods_2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天已结束交易"
        style="@style/goods_3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="明天请赶早哦"
        style="@style/goods_3"/>
    <LinearLayout
	        android:id="@+id/total_trade"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center"
	        android:layout_marginTop="30dp"
	        android:background="@drawable/bgn">
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="今日本场站共成交"
			        style="@style/goods_4_1"/>
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="28"
			        android:id="@+id/goods_unavailable_count"
			        style="@style/goods_4_2"/>
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="笔"
			        style="@style/goods_4_1"/>
        </LinearLayout>
        <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent">
	    	<RadioGroup
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_alignParentBottom="true">
		    
		    <RadioButton
		        android:button="@drawable/item_goods_footer_home"
		        android:enabled="true"
		        android:id="@+id/goods_footer_home_unavailable"
		        android:onClick="onClick"/>
		    <RadioButton
		        android:button="@drawable/item_goods_footer_ybj"
		        android:enabled="false"
		        android:id="@+id/goods_footer_ybj_unavailable"/>
		    <RadioButton
		        android:button="@drawable/item_goods_footer_history"
		        android:enabled="false"
		        android:id="@+id/goods_footer_history_unavailable"/>
		    <RadioButton
		        android:button="@drawable/item_goods_footer_auto"
		        android:enabled="false"
		        android:id="@+id/goods_footer_auto_unavailable"/>
		    <RadioButton
		        android:button="@drawable/item_goods_footer_search"
		        android:enabled="false"
		        android:id="@+id/goods_footer_search_unavailable"/>
		
		</RadioGroup>
	    </RelativeLayout>
</LinearLayout>
