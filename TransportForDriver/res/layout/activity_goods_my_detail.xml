<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_gray">
    <include 
        layout="@layout/common_title_goods"/>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="vertical" 
	    android:visibility="invisible"
	    android:id="@+id/detail_layout">
	    <ScrollView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:fadeScrollbars="false"
	        android:scrollbarSize="0.5dp">
	        <LinearLayout 
	            android:orientation="vertical"
	       		android:layout_width="match_parent"
	        	android:layout_height="wrap_content">
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="23dp"
			        android:paddingLeft="10dp"
			        android:gravity="center_vertical"
			        android:text="订单号：2425425452"
			        android:id="@+id/mygoods_ordernum"
			        style="@style/goods_7_2"/>
			    <RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="#FBF6EE"
			        android:padding="5dp">
			        <ImageView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="5dp"
			            android:src="@drawable/tb"
			            android:id="@+id/mygoods_tb"/>
			        <RelativeLayout
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:layout_toRightOf="@id/mygoods_tb"
			        	android:layout_marginTop="2dp">
			        	<TextView
			        	    android:layout_width="wrap_content" 
			        	    android:layout_height="wrap_content"
			        	    style="@style/goods_2"
			        	    android:text="浙江金华"
			        	    android:id="@+id/mygoods_depart"/>
			    	    <TextView
			        	    android:layout_width="wrap_content" 
			        	    android:layout_height="wrap_content"
			        	    android:layout_below="@id/mygoods_depart"
			        	    android:layout_marginTop="2dp"
			        	    style="@style/goods_3"
			        	    android:text="有20吨泡货需13米平板车一辆"
			        	    android:id="@+id/mygoods_gs1"/>
			        	<ImageView
			        	    android:layout_width="wrap_content"
			        	    android:layout_height="wrap_content"
			        	    android:layout_toRightOf="@id/mygoods_depart"
			        	    android:layout_alignTop="@id/mygoods_depart"
			        	    android:layout_above="@id/mygoods_gs1"
			        	    android:layout_marginLeft="3dp"
			        	    android:layout_centerVertical="true"
			        	    android:src="@drawable/ar"
			        	    android:id="@+id/mygoods_ar"/>
			        	<TextView
			        	    android:layout_width="wrap_content" 
			        	    android:layout_height="wrap_content"
			        	    android:layout_toRightOf="@id/mygoods_ar"
			        	    android:layout_marginLeft="3dp"
			        	    style="@style/goods_2"
			        	    android:text="内蒙古呼和浩特"
			        	    android:id="@+id/mygoods_target"/>
			
			        	<TextView
			        	    android:layout_width="wrap_content" 
			        	    android:layout_height="wrap_content"
			        	    android:layout_below="@id/mygoods_gs1"
			        	    android:layout_marginTop="2dp"
			        	    style="@style/goods_3"
			        	    android:text="货款到付6-24日装货，一装一卸"
			        	    android:id="@+id/mygoods_gs2"/>
			        	<TextView
			        	    android:layout_width="wrap_content" 
			        	    android:layout_height="wrap_content"
			        	    android:layout_below="@id/mygoods_gs2"
			        	    android:layout_marginTop="2dp"
			        	    style="@style/goods_4"
			        	    android:text="装货地点在南京栖霞区200号"
			        	    android:id="@+id/mygoods_gs3"/>
			        </RelativeLayout>
			   </RelativeLayout>
			   <LinearLayout
			       android:layout_width="match_parent"
			       android:layout_height="48.5dp"
			       android:background="@drawable/kbbg480">
			       <LinearLayout
				       android:layout_width="wrap_content"
				       android:layout_height="wrap_content"
				       android:layout_weight="1"
				       android:gravity="center_vertical">
			           <View
					        android:layout_width="0.5dp"
					        android:layout_height="44dp"
					        android:background="#CCCCCC"
					        android:layout_marginLeft="0.5dp"/>
			       	   <TextView
			       	       android:layout_width="wrap_content"
				           android:layout_height="wrap_content"
				           android:layout_marginLeft="10dp"
				           style="@style/goods_1"
				           android:text="货主口碑"/>
			   	   </LinearLayout>
			   	   <LinearLayout
				       android:layout_width="wrap_content"
				       android:layout_height="wrap_content"
				       android:layout_weight="1">
			       	   <View
					        android:layout_width="0.5dp"
					        android:layout_height="44dp"
					        android:background="#CCCCCC"/>
			       	   <TextView
			       	       android:layout_width="wrap_content"
				           android:layout_height="48.5dp"
				           android:layout_marginLeft="10dp"
				           android:gravity="center"
				           style="@style/goods_1"
				           android:text="诚信值："/>
			       	   <TextView
			       	       android:layout_width="wrap_content"
				           android:layout_height="48.5dp"
				           android:gravity="center"
				           style="@style/goods_5"
				           android:text="1000"
				           android:id="@+id/mygoods_account"/>
			   	   </LinearLayout>
			   	   <TextView
			      	   android:layout_width="wrap_content"
			           android:layout_height="48.5dp"
			           android:layout_weight="1"
			           android:gravity="center_vertical|right"
			           style="@style/goods_1"
			           android:text="发货好评度："
			           android:id="@+id/mygoods_account_"
			           android:onClick="onClick"/>
					<LinearLayout
				       android:layout_width="wrap_content"
				       android:layout_height="48.5dp"
				       android:layout_weight="1"
				       android:gravity="center_vertical"
				       android:id="@+id/mygoods_account_1"
			           android:onClick="onClick">
				   	   <RatingBar
				   	       android:id="@+id/mygoods_ratingbar"
				   	       style="@style/MyRatingBar"
				   	       android:layout_width="wrap_content"
				   	       android:layout_height="wrap_content"
				   	       android:rating="5.0" />
			       </LinearLayout>
			       <LinearLayout
				       android:layout_width="wrap_content"
				       android:layout_height="48.5dp"
				       android:layout_weight="1"
				       android:gravity="center_vertical">
				   	   <ImageView
				       android:layout_width="0dp"
				       android:layout_height="wrap_content"
				       android:layout_weight="1"
				       android:src="@drawable/more"
				       android:id="@+id/mygoods_more"
				       android:onClick="onClick"/>
				   	   <View
					        android:layout_width="0.5dp"
					        android:layout_height="44dp"
					        android:layout_marginRight="0.5dp"
					        android:background="#CCCCCC"/>
			       </LinearLayout>
				   
			   </LinearLayout>
			    
			   <RelativeLayout
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:paddingLeft="10dp"
			       android:paddingRight="10dp"
			       android:background="#FBF6EE">
			      <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="23dp"
			        android:gravity="center_vertical"
			        style="@style/goods_1"
			        android:text="信息费："
			        android:id="@+id/mygoods_info_1"/>
			      <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="23dp"
			        android:layout_toRightOf="@id/mygoods_info_1"
			        android:gravity="center"
			        android:textSize="12sp"
			        android:textColor="#FF3300"
			        android:text="300"
			        android:id="@+id/mygoods_info"/>
			      <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="23dp"
			        android:gravity="center"
			        android:layout_toRightOf="@id/mygoods_info"
			        style="@style/goods_1"
			        android:text="元"
			        android:id="@+id/mygoods_info_2"/>
			        <LinearLayout
				        android:layout_width="wrap_content"
				        android:layout_height="23dp"
				        android:layout_alignParentRight="true"
				        android:gravity="center">
				   	   	      <TextView
						        android:layout_width="wrap_content"
						        android:layout_height="23dp"
						        android:gravity="center"
						        style="@style/goods_1"
						        android:text="成交价："/>
						      <TextView
						        android:layout_width="wrap_content"
						        android:layout_height="23dp"
						        android:background="@drawable/cjjbg"
						        android:gravity="center"
						        android:textSize="20sp"
						        android:textColor="#FF3300"
						        android:text="5000"
						        android:id="@+id/mygoods_price"/>
						      <TextView
						        android:layout_width="wrap_content"
						        android:layout_height="23dp"
						        android:gravity="center"
						        style="@style/goods_1"
						        android:text="元"/>
				   	   </LinearLayout>
			   </RelativeLayout>
			   <RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="160dp"
			        android:orientation="vertical"
			        android:background="@drawable/hzbg">
			        <ImageView
			            android:layout_width="70dp"
			        	android:layout_height="83dp"
			        	android:layout_marginTop="35dp"
			        	android:layout_marginLeft="5dp"
			        	android:scaleType="centerCrop"
			        	android:src="@drawable/twitter_photo"
			        	android:id="@+id/mygoods_photo"/>
			        <TextView
			            android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:layout_marginTop="5dp"
			        	android:layout_marginLeft="5dp"
			        	android:layout_below="@id/mygoods_photo"
			        	android:gravity="center_horizontal"
			        	android:background="@drawable/namebg"
			        	android:text="王大老板"
			        	style="@style/goods_2_1"
			        	android:id="@+id/mygoods_name"/>
			        <TextView
			            android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:layout_marginTop="35dp"
			        	android:layout_marginLeft="8dp"
			        	android:layout_toRightOf="@id/mygoods_photo"
			        	android:lineSpacingExtra="2dp"
			        	android:text="公司:大风车货运信息部\n地址:杭州市石祥路石大路货运市场"
			        	style="@style/goods_3"
			        	android:id="@+id/mygoods_shipperinfo"/>
			        <!-- 个人手机号码 -->
			        <RelativeLayout
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="2.8dp"
			            android:layout_toRightOf="@id/mygoods_photo"
			            android:layout_below="@id/mygoods_shipperinfo"
			            android:id="@+id/mygoods_shipper_mobile"
			            android:gravity="center_vertical"
			            android:paddingLeft="5dp" 
			            android:onClick="onClick"
			            android:visibility="gone">
			            <TextView
			                android:id="@+id/mygoods_shipper_mobile_1"
			                style="@style/goods_3"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="手机:" />
			            <TextView
			                android:id="@+id/mygoods_shipper_mobile_"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_toRightOf="@id/mygoods_shipper_mobile_1"
			                style="@style/goods_3"/>
			            <ImageView
			                android:layout_width="22dp"
			                android:layout_height="22dp"
			                android:layout_marginLeft="10dp"
			                android:layout_toRightOf="@id/mygoods_shipper_mobile_"
			                android:src="@drawable/dh" />
			            <ImageView
			                android:layout_width="26dp"
			                android:layout_height="27dp"
			                android:layout_alignParentRight="true"
			                android:layout_marginRight="10dp"
			                android:src="@drawable/yjt" />
			        </RelativeLayout>
			        <!-- 个人电话号码 -->
			        <RelativeLayout
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="2.8dp"
			            android:layout_toRightOf="@id/mygoods_photo"
			            android:layout_below="@id/mygoods_shipper_mobile"
			            android:gravity="center_vertical"
			            android:paddingLeft="5dp" 
			            android:onClick="onClick"
			            android:id="@+id/mygoods_shipper_tel"
			            android:visibility="gone">
			            <TextView
			                android:id="@+id/mygoods_shoujitext"
			                style="@style/goods_3"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="固话:" />
			            <TextView
			                android:id="@+id/mygoods_shipper_tel_"
			                style="@style/goods_3"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_toRightOf="@id/mygoods_shoujitext"/>
			            <ImageView
			                android:layout_width="22dp"
			                android:layout_height="22dp"
			                android:layout_marginLeft="10dp"
			                android:layout_toRightOf="@id/mygoods_shipper_tel_"
			                android:src="@drawable/dh" />
			            <ImageView
			                android:layout_width="26dp"
			                android:layout_height="27dp"
			                android:layout_alignParentRight="true"
			                android:layout_marginRight="10dp"
			                android:src="@drawable/yjt" />
			        </RelativeLayout>
			   </RelativeLayout>
			   <LinearLayout
			     android:layout_width="match_parent"
				 android:layout_height="48dp"
				 android:orientation="vertical"
				 android:paddingLeft="20dp"
				 android:background="@color/color_while">
				   <LinearLayout
				        android:layout_width="match_parent"
				    	android:layout_height="24dp">
				        <TextView
					        android:layout_width="wrap_content"
					    	android:layout_height="24dp"
					    	android:gravity="center"
					    	style="@style/goods_3_2"
					    	android:text="请在"/>
				        <TextView
					        android:layout_width="wrap_content"
					    	android:layout_height="24dp"
					    	android:gravity="center"
					    	style="@style/goods_3_3"
					    	android:text="30分钟"/>
				        <TextView
					        android:layout_width="wrap_content"
					    	android:layout_height="24dp"
					    	android:gravity="center"
					    	style="@style/goods_3_2"
					    	android:text="内至货主处签署运输协议，过期失效"/>
				   </LinearLayout>
			   <TextView
			        android:layout_width="wrap_content"
			    	android:layout_height="24dp"
			    	style="@style/goods_3_2"
			    	android:text="且会被投诉，影响您的信用。"/>
			   </LinearLayout>
			   <TextView
			        android:layout_width="match_parent"
			    	android:layout_height="48dp"
			    	android:background="#F47102"
			    	android:gravity="center"
			    	android:text="剩余时间:30分钟0秒"
			    	style="@style/goods_2_1"
			    	android:id="@+id/mygoods_leftTime"/>
	     </LinearLayout>
	   </ScrollView>
   </LinearLayout>
   <include
       layout="@layout/common_footer_goods"/>
</LinearLayout>
