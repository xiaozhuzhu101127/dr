<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.topjet.crediblenumber"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        layout="@layout/common_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/h_margin_big"
            android:paddingRight="@dimen/h_margin_big"
            android:paddingTop="15dp" >

            <RelativeLayout
                android:id="@+id/searchViolate"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="@dimen/category_item_margin"
                android:background="@drawable/common_while_bg"
                android:onClick="onClick"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >
               
                    <LinearLayout 
                        android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:paddingTop="14dp"
                          android:gravity="center"
                                              >
                    
                          <ImageView 
                                android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:src="@drawable/voilate1"
		                    android:paddingRight="15dp"
                              />
		                <TextView
		             
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_centerInParent="true"
		                    android:text="拍照查询"
		                    android:textColor="#595959"
		                    android:textSize="18sp" />
		           </LinearLayout>

                 <TextView
		                
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_centerInParent="true"
		                    android:text="拍摄清晰行驶证照片"
		                    android:textColor="#595959"
		                    android:textSize="18sp"
		                       android:paddingTop="14dp"
		                     />
            </RelativeLayout>

         
        
            
            
            
                <RelativeLayout
                  android:id="@+id/resultViolate"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="@dimen/category_item_margin"
                android:background="@drawable/common_while_bg"
                android:onClick="onClick"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >
               
                    <LinearLayout 
                        android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:paddingTop="14dp"
                          android:gravity="center"
                                              >
                    
                          <ImageView 
                                android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:src="@drawable/voildate2"
		                    android:paddingRight="15dp"
                              />
		                <TextView
		                
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_centerInParent="true"
		                    android:text="查询结果明细"
		                    android:textColor="#595959"
		                    android:textSize="18sp" />
		           </LinearLayout>

                 <TextView
		                   
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_centerInParent="true"
		                    android:text="查看提交违章查询结果"
		                    android:textColor="#595959"
		                    android:textSize="18sp"
		                       android:paddingTop="14dp"
		                     />
            </RelativeLayout>
            
             <TextView 
                   android:layout_gravity="center_horizontal"
                   android:layout_width="wrap_content"
		           android:layout_height="wrap_content"		                  
		          android:text="温馨提示：试运行期间，服务时间为08：00-17：30 ，敬请谅解。"
             />
            
            
          
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>