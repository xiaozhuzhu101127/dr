<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:src="@drawable/qu"
        android:id="@+id/qu"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/qu"
        android:layout_marginLeft="3dp"
        android:orientation="vertical"
        android:id="@+id/goos_layout">
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        	<TextView
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="浙江杭州"
        		android:textSize="22sp"
        		android:textColor="#DB3C0B"
        		android:id="@+id/goods_serach_target"/>
        	<TextView
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="有0人在抢"
        		android:textSize="17sp"
        		android:textColor="#169828"
        		android:id="@+id/goods_serach_qiangcount"/>
    	</LinearLayout>
    	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        	<TextView
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="20吨"
        		android:textSize="17sp"
        		android:textColor="#666666"
        		android:id="@+id/goods_serach_weight"/>
        	<TextView
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="3dp"
        		android:text="冷冻食品"
        		android:textSize="17sp"
        		android:textColor="#666666"
        		android:id="@+id/goods_serach_goodsType"/>
        	<TextView
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="3dp"
        		android:text="17.5米"
        		android:textSize="17sp"
        		android:textColor="#666666"
        		android:id="@+id/goods_serach_truckLegth"/>
        	<TextView
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="3dp"
        		android:text="前四后八"
        		android:textSize="17sp"
        		android:textColor="#666666"
        		android:id="@+id/goods_serach_truckType"/>
    	</LinearLayout>
    	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        	<TextView
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="发货好评度："
        		android:textSize="14sp"
        		android:textColor="#666666"/>
        	    <RatingBar
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_gravity="center_vertical"
			    	android:id="@+id/rating_bar"
			    	style="@style/MyRatingBar" 
			    	android:rating="5.0"/>
        </LinearLayout>
    </LinearLayout>
	<ImageButton
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:background="@drawable/qiang"
	    android:visibility="visible"
	    android:id="@+id/goods_search_qiang"
	    android:onClick="qiang"/>
	<ImageButton
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:background="@drawable/btn3n"
	    android:visibility="gone"
	    android:id="@+id/goods_search_noqiang"/>
	 <ImageButton
        android:id="@+id/goods_search_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tiao"
        android:visibility="gone" />
	 <ImageButton
        android:id="@+id/goods_search_nochange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn8"
        android:visibility="gone" />
</RelativeLayout>
