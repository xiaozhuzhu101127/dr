<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/h_margin_small"
    android:paddingRight="@dimen/h_margin_small" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/common_while_bg"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/item_local_phone_book_photo"
                android:layout_width="49.5dp"
                android:layout_height="45.7dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/phone_book_default_photo" />

            <TextView
                android:id="@+id/item_local_phone_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="张三丰"
                android:textColor="#4f4f4f"
                android:textSize="13.5sp" />

            <TextView
                android:id="@+id/item_local_phone_book_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="诚信值:9999"
                android:textColor="#4f4f4f"
                android:textSize="11.5sp" />
            
              <RatingBar
                                        android:id="@+id/xingji"
                                        style="@style/myRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:isIndicator="true"
                                        android:numStars="5"                                       
                                        android:stepSize="1" >
                                        </RatingBar>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_local_phone_book_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="上海拓景信息科技有限公司"
                android:textColor="#4f4f4f"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_local_phone_book_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="13888888888 02655556666"
                android:textColor="#4f4f4f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_local_phone_book_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="地址：上海浦东新区程辉181号14#上海浦东新区程辉181号14#"
                android:textColor="#4f4f4f"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>