<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_gray">
    <include
        layout="@layout/common_title_goods"/>
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/goods_3"
            android:text="我出价"/>
        <!-- 
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            style="@style/goods_bj"
            android:id="@+id/goods_cj"/>
         -->
        <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="22sp"
            android:textColor="#666666"
            android:gravity="center"
            android:maxLength="6"
            android:inputType="number"
            android:id="@+id/goods_cj"/>
    </LinearLayout>
        <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_marginTop="30dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn4"
            android:text="-50"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:id="@+id/goods_50"
            android:onClick="bid"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:background="@drawable/btn4"
            android:text="-100"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:id="@+id/goods_100"
            android:onClick="bid"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:background="@drawable/btn4"
            android:text="-150"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:id="@+id/goods_150"
            android:onClick="bid"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:background="@drawable/btn4"
            android:text="-200"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:id="@+id/goods_200"
            android:onClick="bid"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/btn2"
        android:text="确认报价"
        android:id="@+id/goods_bj_1"
        android:onClick="bid"/>
    <TextView
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_marginTop="12dp"
   		android:layout_weight="1"
   		android:paddingLeft="12dp"
   		android:text="说明：\n1、出价越低，排名越高，越有可能抢到货源。\n2、同等价格下，信用越高，排名越前。"
   		style="@style/goods_1_1"/>
		<include
	        layout="@layout/common_footer_goods"/>
</LinearLayout>
