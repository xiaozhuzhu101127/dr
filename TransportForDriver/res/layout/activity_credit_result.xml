<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:background="@color/color_gray" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <include
                    android:id="@+id/title_bar"
                    layout="@layout/common_title_bar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/color_gray"
                    android:orientation="vertical" >

                    <!-- 个人信息 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/common_while_bg"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="153dp" >

                            <ImageView
                                android:id="@+id/picture"
                                android:layout_width="80dp"
                                android:layout_height="150dp"
                                android:src="@drawable/idc_photo" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@id/picture"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:layout_width="22dp"
                                        android:layout_height="21dp"
                                        android:background="@drawable/main_sig1" />

                                    <TextView
                                        android:id="@+id/realName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:text=""
                                        android:textColor="#919191"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="22dp"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="公司名:"
                                        android:textColor="#7E7E7E"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/companyName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#7E7E7E"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <!-- 诚信值 -->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="22dp"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="诚信值 :"
                                        android:textColor="#7E7E7E"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/yslAccount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#7E7E7E"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <!-- 诚信值结束 -->


                                <!-- 发货好评度开始 -->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="22dp"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="发货好评度 :"
                                        android:textColor="#7E7E7E"
                                        android:textSize="12sp" />

                                    <!-- 评价图标 -->

                                    <RatingBar
                                        android:id="@+id/fahuoxingji"
                                        style="@style/myRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:isIndicator="true"
                                        android:numStars="5"
                                        android:rating="1"
                                        android:stepSize="1" >
                                    </RatingBar>

                                    <TextView
                                        android:id="@+id/fahuoxingjicount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#7E7E7E"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <!-- 发货好评度结束 -->


                                <!-- 承运好评度开始 -->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="22dp"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="承运好评度 :"
                                        android:textColor="#7E7E7E"
                                        android:textSize="12sp" />

                                    <!-- 评价图标 -->

                                    <RatingBar
                                        android:id="@+id/chengyunxingji"
                                        style="@style/myRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:isIndicator="true"
                                        android:numStars="5"
                                        android:rating="1" >
                                    </RatingBar>

                                    <TextView
                                        android:id="@+id/chengyunxingjicount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#7E7E7E"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <!-- 承运好评度结束 -->

                            </LinearLayout>
                        </RelativeLayout>
                        <!-- 分割线 -->

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#EAEAEA" />

                        <!-- 运商行提示 -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp" >

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="26dp"
                                android:paddingTop="4dp"
                                android:src="@drawable/st" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="运商行提示"
                                android:textColor="#3B393A"
                                android:textSize="24dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- 运商行提示 结束 -->

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="尚未收到有效投诉，交易较安全"
                            android:textColor="#7F7F7F"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <!-- 个人主要信息结束 -->


                    <!-- 个人手机号码 -->

                    <RelativeLayout
                        android:id="@+id/mobileLayout"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/common_while_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp" 
                        android:onClick="onClick">

                        <TextView
                            android:id="@+id/shoujitext"
                            style="@style/creditResultInfo1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机号码" />

                        <TextView
                            android:id="@+id/mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/shoujitext"
                            android:textColor="#878787"
                            android:textSize="18sp" 
                            />

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/mobile"
                            android:src="@drawable/dh" />

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="27dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/yjt" />
                    </RelativeLayout>

                    <!-- 个人手机号码结束 -->


                    <!-- 个人电话号码 -->

                    <RelativeLayout
                          android:id="@+id/telLayout"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/common_while_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp" 
                        android:onClick="onClick">

                        <TextView
                            android:id="@+id/shoujitext"
                            style="@style/creditResultInfo1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="固定电话" />

                        <TextView
                            android:id="@+id/tel"
                            style="@style/creditResultInfo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/shoujitext"
                             />

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/tel"
                            android:src="@drawable/dh" />

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="27dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/yjt" />
                    </RelativeLayout>

                    <!-- 个人电话号码结束 -->


                    <!-- 其他个人信息 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="342dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/common_while_bg"
                        android:orientation="vertical"
                        android:paddingLeft="5dp" >

                        <!-- 當地排名 -->

                        <LinearLayout
                            style="@style/creditResultInfoLayout2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/creditResultInfo1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="当地排名" />

                            <TextView
                                android:id="@+id/paiming"
                                style="@style/creditResultInfo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/pm" />
                        </LinearLayout>

                        <!-- 分割线 -->

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#EAEAEA" />

                        <!-- 会员类型 -->

                        <LinearLayout
                            style="@style/creditResultInfoLayout2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal" >

                            <TextView
                        
                                style="@style/creditResultInfo1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="会员类型" />

                            <TextView
                                android:id="@+id/userType"
                                style="@style/creditResultInfo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>

                        <!-- 分割线 -->

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#EAEAEA" />

                        <!-- 会员级别 -->

                        <LinearLayout
                            style="@style/creditResultInfoLayout2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal" >

                            <TextView
                         
                                style="@style/creditResultInfo1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="会员级别" />

                            <TextView
                                android:id="@+id/memberLevel"
                                style="@style/creditResultInfo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                 />
                        </LinearLayout>

                        <!-- 分割线 -->

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#EAEAEA" />

                        <!-- 注册时间 -->

                        <LinearLayout
                            style="@style/creditResultInfoLayout2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal" >

                            <TextView
                               
                                style="@style/creditResultInfo1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="注册时间" />

                            <TextView
                                android:id="@+id/registerTime"
                                style="@style/creditResultInfo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                 />

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/shijian" />
                        </LinearLayout>

                        <!-- 分割线 -->

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#EAEAEA" />

                        <!-- 精英路线 -->

                        <LinearLayout
                            style="@style/creditResultInfoLayout2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal" >

                            <TextView
                            
                                style="@style/creditResultInfo1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="经营路线" />

                            <TextView
                                android:id="@+id/companylines"
                                style="@style/creditResultInfo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>

                        <!-- 分割线 -->

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#EAEAEA" />

                        <!-- 经营地址 -->

                        <LinearLayout
                            style="@style/creditResultInfoLayout2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal" >

                            <TextView
                         
                                style="@style/creditResultInfo1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="经营地址" />

                            <TextView
                                android:id="@+id/companyAddress"
                                style="@style/creditResultInfo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>

                        <!-- 分割线 -->

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#EAEAEA" />
                        
                      
                    </LinearLayout>
                    <!-- 
                    usrid
                     -->
                   

                    <!-- 其他个人信息 结束 -->
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- 菜单 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <LinearLayout
                   android:id="@+id/queryDianPing"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dian_btn_state"
                android:gravity="center"
                android:onClick="onClick"
        android:clickable="true"
                android:orientation="vertical" >

                <TextView
                   
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#14345d"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="查看评价"
                    android:textColor="#fff"
                    android:textSize="18sp" 
                    
                  />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#1b4da2" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#4487d6" />

            <!-- 添加评论 -->

            <LinearLayout
                  android:id="@+id/addDianPing"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dian_btn_state"
                android:gravity="center"
                android:orientation="vertical" 
                android:onClick="onClick"
                 android:clickable="true"
                 >

                <TextView
                    android:id="@+id/addDianPingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#14345d"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="添加评价"
                    android:textColor="#fff"
                    android:textSize="18sp" 
                    android:focusable="true"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#1b4da2" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#4487d6" />
            <!-- 投诉 -->

            <LinearLayout
                android:id="@+id/toushu"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dianpingshang"
                android:gravity="center"
                android:orientation="horizontal"
                android:onClick="onClick" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:src="@drawable/tousu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#14345d"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:text="投诉"
                    android:textColor="#fff"
                    android:textSize="18sp" 
                    />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#1b4da2" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#4487d6" />
            <!-- 报错 -->

            <LinearLayout
                android:id="@+id/baocuo"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dianpingshang"
                android:gravity="center"
                android:orientation="horizontal"
                android:onClick="onClick" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baocuo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#14345d"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:text="报错"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>