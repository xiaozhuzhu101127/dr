<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/common_while_bg"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/widget_main_item_icon"
            android:layout_width="68.57dp"
            android:layout_height="84.44dp"
            android:layout_alignParentLeft="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/widget_main_item_icon"
            android:paddingLeft="10dp" >

            <TextView
                android:id="@+id/widget_main_item_label_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text=""
                android:textColor="#595959"
                android:textScaleX="0.9"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="19.04dp"
                    android:layout_height="19.04dp"
                    android:background="@drawable/jfjg" />

                <TextView
                    android:id="@+id/widget_main_item_label_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text=""
                    android:textColor="#595959"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</merge>